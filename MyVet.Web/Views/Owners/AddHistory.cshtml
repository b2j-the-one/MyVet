@model MyVet.Web.Models.HistoryViewModel

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center">Créer rendz-vous</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddHistory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PetId" />

            <partial name="_History" />

            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
                <a asp-action="DetailsPet" asp-route-id="@Model.PetId" class="btn btn-success">Revenir à l'animal</a>
            </div>
        </form>
    </div>
</div>
